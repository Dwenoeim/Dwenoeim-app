<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F6EE">

    <!-- 중앙에 위치한 LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!-- 첫 번째 버튼 (EDIT) -->
        <LinearLayout
            android:id="@+id/edit_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edit_button"
            android:backgroundTint="#ECC7CE"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/edit_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="EDIT"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 두 번째 버튼 (QR) -->
        <LinearLayout
            android:id="@+id/qr_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/rounded_edit_button"
            android:backgroundTint="#F9E0E3"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/qr_128" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="QR"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- 취소 버튼 (왼쪽 아래) -->
    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="12dp"
        android:text="CANCEL"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#393636"
        android:layout_gravity="bottom|start" />
</FrameLayout>
